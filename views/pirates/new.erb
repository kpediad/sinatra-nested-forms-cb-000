<h1>Pirate Creation</h1>


<form method="post" action="/pirates">
  Pirate Name: <input type="text" name="pirate[name]">
  Pirate Weight: <input type="text" name="pirate[weight]">
  Pirate Height: <input type="text" name="pirate[height]">
  1st Ship Name: <input id="ship_name_1" type="text" name="pirate[ship][][name]">
  1st Ship Type: <input id="ship_type_1" type="text" name="pirate[ship][][type]">
  1st Ship Booty: <input id="ship_booty_1" type="text" name="pirate[ship][][booty]">
  2nd Ship Name: <input id="ship_name_2" type="text" name="pirate[ship][][name]">
  2nd Ship Type: <input id="ship_type_2" type="text" name="pirate[ship][][type]">
  2nd Ship Booty: <input id="ship_booty_2" type="text" name="pirate[ship][][booty]">
  <input id="submit" name="submit" type="submit">
</form>
